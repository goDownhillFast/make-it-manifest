<% content_for :main_section do %>

  <p id="notice"><%= notice %></p>

  <p>
    <b>Program week:</b>
    <%= @program.program_week %>
  </p>

  <h4>Manhattan 3rd Ward</h4>
  <div class="program-page-layout">
    <%= @program.body_html.html_safe %>
  </div>

  <div style="clear:both; display: none">
    <b>Announcements:</b>
    <%= @program.announcements %>
  </div>

<% end %>

<% content_for :side_section do %>
  <div class="row">
    <h4>Program Items</h4>
    <ul class="sortable-option-list connectedSortable selection-list">
      <%= render :partial => 'items/one_line_item_with_person', locals: {name: "Presiding", people: @people, extra_class: 'unique'} %>
      <%= render :partial => 'items/one_line_item_with_person', locals: {name:  "Conducting", extra_class: 'unique', people: @people} %>
      <%= render :partial => 'items/hymn', locals: {name:  "Opening Hymn", extra_class: 'unique'} %>
      <%= render :partial => 'items/one_line_item_with_person', locals: {name:  "Invocation", extra_class: 'unique', people: @people} %>
      <%= render :partial => 'items/one_line_item', locals: {name:  "Ward Business", extra_class: 'unique', people: @people} %>
      <%= render :partial => 'items/hymn', locals: {name:  "Sacrament Hymn", extra_class: 'unique'} %>
      <%= render :partial => 'items/one_line_item', locals: {name:  "Administration of the Sacrament", extra_class: 'unique', people: @people} %>
      <%= render :partial => 'items/one_line_item', locals: {name:  "Bearing of Testimonies", extra_class: 'unique', people: @people} %>
      <%= render :partial => 'items/one_line_item_with_person', locals: {name: "Speaker", extra_class: 'multiple', people: @people} %>
      <%= render :partial => 'items/hymn', locals: {name:  "Intermediate Hymn", extra_class: 'unique'} %>
      <%= render :partial => 'items/hymn', locals: {name:  "Closing Hymn", extra_class: 'unique'} %>
      <%= render :partial => 'items/one_line_item_with_person', locals: {name: "Benediction", extra_class: 'unique', people: @people} %>
      <% @items.each do |item| %>
        <%= item.content %>
      <% end %>
    </ul>
  </div>

  <%= render partial: 'pictures' %>

<% end %>


